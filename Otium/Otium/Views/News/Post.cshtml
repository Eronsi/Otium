@model Otium.Domain.Models.News

@{
    ViewData["Title"] = Model.Title;
}

<div class="container-fluid py-6 px-5">
    <div class="text-start mx-auto mb-5 py-5">
        <a class="text-uppercase fw-bold" href="/News">Назад<i class="bi bi-arrow-right"></i></a>
    </div>
    <div class="text-center mx-auto mb-5" style="max-width: 600px;">
        <h1 class="display-5 text-uppercase mb-4">@Model.Title</h1>
    </div>
    <div class="row g-5">
        <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12"></div>
        <div class="col-xxl-8 col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12 align-items-center justify-content-between text-start">
            <div class="bg-light">
                @{
                    var imagePath = $"/img/news/news{Model.Id}.jpg";
                    <img src=@imagePath alt="">
                    <p class="h6 text-muted text-center py-4"> @Model.Description </p>
                    <p class="far fa-calendar-alt text-end m-3"> @Model.CreationDate.ToString("dd'/'MM'/'yyyy") </p>
                }
            </div>
        </div>
        <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12"></div>
    </div>
</div>