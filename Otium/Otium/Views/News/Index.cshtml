@model Otium.Domain.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Новости";
}

<div class="container-fluid py-6 px-5">
    <div class="text-center mx-auto mb-2 py-3" style="max-width: 600px;">
        <h1 class="display-5 text-uppercase mb-4">Последние Новости</h1>
    </div>
    
    @if (Model.News is null || (Model.News is not null && Model.News.Count == 0))
    {
        <h4>Новостей нет.</h4>
    }
    else
    {
        foreach (var item in Model.News!)
        {
            var imagePath = $"/img/news/news{item.Id}.png";
            
            <div class="row g-5">
                <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12"></div>
                <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-12 col-sm-12 col-xs-12 align-items-center justify-content-between text-start">
                    <div class="bg-light">
                        <img class="img-fluid max-width" src="@imagePath" alt="">
                        <div class="p-4">
                            <div class="d-flex justify-content-between mb-4">
                                <div class="d-flex align-items-center">
                                    <i class="far fa-calendar-alt text-primary me-2"></i>@item.CreationDate.ToString("MM'/'dd'/'yyyy")
                                </div>
                            </div>
                            <h4 class="text-uppercase mb-3">@item.Title</h4>
                            <h6 class="text-uppercase mb-3">@item.ShortDescription</h6>
                            <a class="text-uppercase fw-bold" href="/Post/@item.Id">Читать далее <i class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12"></div>
                <div class="col-12"></div>
            </div>
        }
    }
</div>